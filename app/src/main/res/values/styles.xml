<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="android:listDivider">@color/color_divider</item>
        <item name="android:windowBackground">@color/color_window_background</item>
    </style>
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/tasks_splash_new</item>
<!--        <item name="android:windowBackground">@drawable/tasks_splash</item>-->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>
    <style name="RadioGroupButtonStyle">
        <!--This attribute is to remove the default style of the button-->
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@drawable/color_selector</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
</resources>